<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FullStackTemplate</title>

    <!-- Polyfill(s) for older browsers -->
    <script src="~/scripts/lib/shim.min.js"></script>

    <script src="~/scripts/lib/zone.js"></script>
    <script src="~/scripts/lib/system.src.js"></script>

    <script src="~/scripts/systemjs.config.js"></script>
    <script>
      System.import('scripts/main.js').catch(function(err){ console.error(err); });
    </script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">AspNetCoreIdentitySample</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <my-app>Loading AppComponent content here ...</my-app>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - FullStackTemplate</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
