{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "types": [ "node" ],
    "typeRoots": [ "node_modules/@types" ],
    "lib": [ "es2016", "dom" ]
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules/*"
  ],
  "files": [
    "scripts/main.ts"
  ],
  "compileOnSave": true
}